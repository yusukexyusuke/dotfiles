snippet if
	if [ ${1:condition} ]; then
		${0}
	fi

snippet el
	else
		$${0}

snippet elif
	elif [ ${1:condition} ]; then
		${0}

snippet for
	for ${1:i} in ${2}; do
		${0}
	done

snippet while
abbr while
	while ${1} ; do
		${0}
	done

snippet until
	until ${1:condition} ; do
		${0}
	done

snippet case
	case ${1} in
		${2} )
			${0}
            ;;
	esac

snippet h
	<<${1}
		${0}
